    <!-- Ripple sur éléments demandés -->
    <script defer>
      (function(){
        function addRipple(e, el){
          const rect = el.getBoundingClientRect();
          const size = Math.max(rect.width, rect.height);
          const ripple = document.createElement('span');
          ripple.className = 'ripple-effect';
          ripple.style.width = ripple.style.height = size + 'px';
          const srcX = (e.clientX || (e.touches && e.touches[0].clientX)) - rect.left - size/2;
          const srcY = (e.clientY || (e.touches && e.touches[0].clientY)) - rect.top  - size/2;
          ripple.style.left = srcX + 'px';
          ripple.style.top = srcY + 'px';
          el.appendChild(ripple);
          ripple.addEventListener('animationend', () => ripple.remove());
        }
        function bindRipple(el){
          if(!el) return;
          el.addEventListener('click', (e)=>addRipple(e, el), {passive:true});
          el.addEventListener('touchstart', (e)=>addRipple(e, el), {passive:true});
        }
        window.addEventListener('DOMContentLoaded', ()=>{
          bindRipple(document.getElementById('btn-cite-jardins'));
          bindRipple(document.getElementById('btn-urgmed-genv'));
          bindRipple(document.querySelector('article.click-card')); // carte infos (droite du slider)
          bindRipple(document.querySelector('.access-card'));       // carte accès
        });
      })();
    </script>

