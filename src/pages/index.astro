---
/** CSS global */
import "../styles/global.css";

/** Composant : bouton RDV flottant */
import BoutonRendezvous from "../components/bouton_rendezvous.astro";

/** === SEO (perso) === */
const SITE_URL = "https://www.exemple.com/"; // ← remplace par ton domaine
const OG_IMAGE = SITE_URL + "image/og-cover.jpg"; // 1200×630 recommandé
const TITLE = "Médecine générale à Suresnes — Dr Alioua";
const DESCRIPTION =
  "Consultations de médecine générale à Suresnes. Secteur 1, Carte Vitale, traumatologie, mésothérapie, polygraphie. Prise de rendez-vous en ligne.";

/** JSON-LD principal (sans numéro de téléphone) */
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "MedicalClinic",
  name: "Centre de consultation - Médecine générale - Dr Alioua",
  url: SITE_URL,
  image: OG_IMAGE,
  address: {
    "@type": "PostalAddress",
    streetAddress: "11 Place de Stalingrad",
    postalCode: "92150",
    addressLocality: "Suresnes",
    addressCountry: "FR",
  },
  medicalSpecialty: "GeneralPractice",
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "19:00",
    },
  ],
  priceRange: "€€",
  sameAs: ["https://www.doctolib.fr/medecin-urgentiste/paris/adam-alioua"],
};

/** JSON-LD additionnels (SEO) */
const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Accueil", item: SITE_URL },
    { "@type": "ListItem", position: 2, name: "Médecine générale à Suresnes", item: SITE_URL },
  ],
};
const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Acceptez-vous la Carte Vitale ?",
      acceptedAnswer: { "@type": "Answer", text: "Oui, cabinet conventionné secteur 1. Tiers payant Sécurité sociale." },
    },
    {
      "@type": "Question",
      name: "Quels sont les tarifs des consultations ?",
      acceptedAnswer: { "@type": "Answer", text: "De 30 € à 75 € selon l’acte. Tout dépassement est annoncé à l’avance." },
    },
    {
      "@type": "Question",
      name: "Comment prendre rendez-vous ?",
      acceptedAnswer: { "@type": "Answer", text: "En ligne via Doctolib." },
    },
    {
      "@type": "Question",
      name: "En cas d’urgence ?",
      acceptedAnswer: { "@type": "Answer", text: "Appelez le 15 (Samu)." },
    },
  ],
};
